{
  "id": null,
  "title": "Working Apps Dashboard",
  "tags": ["webapp", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "All Targets Status",
      "type": "table",
      "targets": [
        {
          "expr": "up",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "All Container CPU",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
          "legendFormat": "{{pod}} - {{container}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "All Container Memory",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_usage_bytes",
          "legendFormat": "{{pod}} - {{container}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "All Pods Info",
      "type": "table",
      "targets": [
        {
          "expr": "kube_pod_info",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 5,
      "title": "Process Metrics (if available)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "RSS Memory - {{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "id": 6,
      "title": "Node Load",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "Load 1m"
        },
        {
          "expr": "node_load5",
          "legendFormat": "Load 5m"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    }
  ],
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "refresh": "5s",
  "schemaVersion": 30,
  "version": 1
}