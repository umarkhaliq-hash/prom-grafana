{
  "id": null,
  "title": "üöÄ Complete Kubernetes + Apps Dashboard",
  "tags": ["kubernetes", "webapp", "screener-app", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "üèóÔ∏è Cluster Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Nodes"
        },
        {
          "expr": "count(kube_pod_info)",
          "legendFormat": "Total Pods"
        },
        {
          "expr": "count(kube_deployment_status_replicas)",
          "legendFormat": "Deployments"
        },
        {
          "expr": "count(kube_service_info)",
          "legendFormat": "Services"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "üìä Your Apps Pod Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(kube_pod_info{pod=~\"webapp-deployment.*\"})",
          "legendFormat": "Webapp Pods"
        },
        {
          "expr": "count(kube_pod_info{pod=~\"screener-deployment.*\"})",
          "legendFormat": "Screener Pods"
        },
        {
          "expr": "sum(kube_pod_status_phase{pod=~\"(webapp|screener)-deployment.*\", phase=\"Running\"})",
          "legendFormat": "Running"
        },
        {
          "expr": "sum(kube_pod_status_phase{pod=~\"(webapp|screener)-deployment.*\", phase=\"Pending\"})",
          "legendFormat": "Pending"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 6}
    },
    {
      "id": 3,
      "title": "üíæ Apps Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"webapp-deployment.*\", container!=\"POD\"}",
          "legendFormat": "Webapp Memory"
        },
        {
          "expr": "container_memory_usage_bytes{pod=~\"screener-deployment.*\", container!=\"POD\"}",
          "legendFormat": "Screener Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 6}
    },
    {
      "id": 4,
      "title": "üìà Pod CPU Usage Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"webapp-deployment.*\", container!=\"POD\"}[5m]) * 100",
          "legendFormat": "{{pod}} CPU"
        },
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"screener-deployment.*\", container!=\"POD\"}[5m]) * 100",
          "legendFormat": "{{pod}} CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
    },
    {
      "id": 5,
      "title": "üìà Pod Memory Usage Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"webapp-deployment.*\", container!=\"POD\"}",
          "legendFormat": "{{pod}} Memory"
        },
        {
          "expr": "container_memory_usage_bytes{pod=~\"screener-deployment.*\", container!=\"POD\"}",
          "legendFormat": "{{pod}} Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
    },
    {
      "id": 6,
      "title": "üîÑ Pod Restarts & Age",
      "type": "table",
      "targets": [
        {
          "expr": "kube_pod_container_status_restarts_total{pod=~\"(webapp|screener)-deployment.*\"}",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
    },
    {
      "id": 7,
      "title": "üìã Deployment Status",
      "type": "table",
      "targets": [
        {
          "expr": "kube_deployment_status_replicas{deployment=~\"(webapp|screener)-deployment\"}",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
    },
    {
      "id": 8,
      "title": "üåê Node Resources",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "Load 1m"
        },
        {
          "expr": "100 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100)",
          "legendFormat": "Memory Usage %"
        },
        {
          "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100",
          "legendFormat": "Disk Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
    },
    {
      "id": 9,
      "title": "üêç Python Application Metrics",
      "type": "timeseries",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{instance=\"10.244.0.11:4000\"}",
          "legendFormat": "Webapp RSS Memory"
        },
        {
          "expr": "process_resident_memory_bytes{instance=\"10.244.0.10:5000\"}",
          "legendFormat": "Screener RSS Memory"
        },
        {
          "expr": "rate(python_gc_collections_total{instance=\"10.244.0.11:4000\"}[5m])",
          "legendFormat": "Webapp GC Gen {{generation}}"
        },
        {
          "expr": "rate(python_gc_collections_total{instance=\"10.244.0.10:5000\"}[5m])",
          "legendFormat": "Screener GC Gen {{generation}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
    },
    {
      "id": 10,
      "title": "üìä Kubernetes Events (Recent)",
      "type": "table",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{pod=~\"(webapp|screener)-deployment.*\"}[1h])",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36}
    },
    {
      "id": 11,
      "title": "üîç Service Discovery",
      "type": "table",
      "targets": [
        {
          "expr": "kube_service_info{service=~\"(webapp|screener).*\"}",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "schemaVersion": 30,
  "version": 1
}